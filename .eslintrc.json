{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "moment": true,
        "url": true,
        "axios": true,
        "Cookies": true,
        "describe": true,
        "it": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            2,
            { "SwitchCase": 1, "MemberExpression": "off" }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "max-len": ["error", 100]
    }
}
